# Task 1

weather = "sunny"

if weather == "sunny":
    print ("Wear sunglasses!")

else: 
    print ("Take an umbrella")

# Task 2
feeling_today = "happy"
if feeling_today == "happy":
    print("That's great to hear!")

else:
    print("I hope your day gets better!")

# Task 3
  
mood = "excited"

if mood == "excited":
    print("Yay! Let's have fun.")
else:
    print("Let's find something fun to do!")